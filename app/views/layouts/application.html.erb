<!DOCTYPE html>
<html>
<head>
  <title>Aurora</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_page?("/") %>
	<%= render '/home/header_homepage' %>
	<%= render '/home/topsection' %>
	<%= render '/home/signup' %>
<% else %>
	<%= render '/home/header' %>
<% end %>

<div class="container">

<% flash.each do |name, msg| %>
	<%= content_tag(:div, msg, class: "alert alert-info") %>
<% end %>

<%= yield %>
</div>

</body>
</html>
